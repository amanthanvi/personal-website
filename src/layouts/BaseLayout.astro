---
import BaseHead from '../components/layout/BaseHead.astro';
import SkipLink from '../components/layout/SkipLink.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import BootSequence from '../components/boot/BootSequence.astro';
import ParticleNetwork from '../components/three/ParticleNetwork.astro';
import ScrollProgress from '../components/ui/ScrollProgress.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  noindex?: boolean;
}

const { title, description, image, noindex } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="auto">
  <head>
    <BaseHead title={title} description={description} image={image} noindex={noindex} />
  </head>
  <body class="hud-scanlines min-h-screen bg-bg text-text">
    <BootSequence />
    <ParticleNetwork />
    <SkipLink />
    <ScrollProgress />
    <Header />
    <main id="content" class="relative z-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
